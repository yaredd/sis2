<h1>Listing courses</h1>

<table>
  <tr>
    <th>Coursenumber</th>
    <th>Name</th>
    <th>Description</th>
    <th></th>

  </tr>
  <p>
  	<%= link_to 'Add Course', new_course_path %>
  </p>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.courseNumber %></td>
    <td><%= course.name %></td>
    <td><%= course.description %></td>
    <td><%= link_to 'Edit', edit_course_path(course) %></td>
  </tr>
<% end %>
</table>

